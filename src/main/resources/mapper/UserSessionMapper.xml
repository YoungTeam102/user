<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.igniubi.user.mapper.IUserSessionMapper">

    <resultMap id="sessionMap" type="com.igniubi.user.model.UserSession">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="session_key" column="sessionKey" jdbcType="VARCHAR"/>
        <result property="last_time" column="lastTime" jdbcType="INTEGER"/>
        <result property="expire_time" column="expireTime" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List" >
      uid, session_key, last_time, expire_time
    </sql>

    <select id="get" resultMap="sessionMap" parameterType="java.lang.Integer">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_session
        where uid = #{id,jdbcType=INTEGER}
    </select>

    <select id="listAllUserSession" resultMap="sessionMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM user_session
    </select>

    <select id="selectSessionByPrimary" resultMap="sessionMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM user_session
        where uid = #{uid,jdbcType=INTEGER}
    </select>

    <select id="selectUid" resultType="java.lang.Integer">
        SELECT
        uid
        FROM user_session
        where session_key = #{sessionKey,jdbcType=VARCHAR}
    </select>

    <insert id="insertUserSession"  parameterType="com.igniubi.user.model.UserSession">
        insert into user_session(uid, session_key, last_time, expire_time)
          values (#{uid,jdbcType=INTEGER}, #{sessionKey,jdbcType=VARCHAR}, #{lastTime,jdbcType=INTEGER}, #{expireTime,jdbcType=INTEGER})
    </insert>


    <update id="updateUserSesson"  parameterType="com.igniubi.user.model.UserSession">
        update user_session
        <set >
            <if test="sessionKey != null" >
                session_key = #{sessionKey,jdbcType=VARCHAR},
            </if>
            <if test="lastTime != null" >
                last_time = #{lastTime,jdbcType=INTEGER},
            </if>
            <if test="expireTime != null" >
                expire_time = #{expireTime,jdbcType=INTEGER},
            </if>
        </set>
        where uid = #{uid,jdbcType=INTEGER}
    </update>

</mapper>