<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.igniubi.user.dao.IUserSessionDao">
    <resultMap id="sessionMap" type="com.igniubi.user.model.UserSession">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="sessionKey" column="sessionKey" jdbcType="VARCHAR"/>
        <result property="last_login_time" column="lastLoginTime" jdbcType="INTEGER"/>
        <result property="expire_time" column="expireTime" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List" >
    id, uid, sessionKey, last_login_time, expire_time
  </sql>

    <select id="selectUserByPrimary" resultMap="sessionMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM user_session
        where id = #{uid,jdbcType=INTEGER}
    </select>

    <select id="selectUserByMobile" resultMap="sessionMap">
        SELECT
        <include refid="Base_Column_List"></include>
        FROM user_session
        where uid = #{uid,jdbcType=INTEGER}
    </select>

    <insert id="insertUserSession"  parameterType="com.igniubi.user.model.UserSession">
        insert into user_session(uid, sessionKey, last_login_time, expire_time)
          values (#{uid,jdbcType=INTEGER}, #{sessionKey,jdbcType=VARCHAR}, #{lastLoginTime,jdbcType=INTEGER}, #{expireTime,jdbcType=INTEGER})
    </insert>


    <update id="updateUserSesson"  parameterType="com.igniubi.user.model.UserSession">
        update user_session
        <set >
            <if test="sessionKey != null" >
                sessionKey = #{sessionKey,jdbcType=VARCHAR},
            </if>
            <if test="lastLoginTime != null" >
                last_login_time = #{lastLoginTime,jdbcType=INTEGER},
            </if>
            <if test="updateTime != null" >
                expire_time = #{expireTime,jdbcType=INTEGER},
            </if>
        </set>
        where uid = #{uid,jdbcType=INTEGER}
    </update>
</mapper>